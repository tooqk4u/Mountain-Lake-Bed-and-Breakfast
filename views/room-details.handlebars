<header>
  <div>
    <h2>{{room_details.room_name}}</h2>
  </div>
</header>

<div class = "column">
  <div class="row d-flex flex-grow-1 p-2">

  <img src="{{ room_details.room_img }}" alt="image of {{room_details.room_name}}" class="img-fluid mx-auto h-75 w-75 d-block"  />




</div>
<div class="row m-2 d-flex justify-content-center">
<div class = 'col-12'>
<p class="text-dark text-center">{{room_details.room_description}}</p>
</div>
</div>
<!--If logged in -->
{{#if loggedIn}}
<div class = "row d-flex text-center ">
  <div class="container d-block mx">
    
    <form id="booking-date" class="text-dark">
      <div class="form-row align-items-center">
      <input type="hidden" id="user_id" name="user_id" value={{userId}} class="form-control">
      <label for="start_date">Check In Date</label>
      <input type="date" id="start_date" name="start_date" class="form-control">
      <label for="end_date">Check Out Date</label>
      <input type="date" id="end_date" name="end_date" class="form-control">
      <br>
      <button type="submit" class="btn btn-outline-danger form-control btn-primary book-btn">Book Room</button>
      </div>
      <!--end of if logged in -->
    </form>
 </div>
</div>
<div class="row d-flex justify-content-center">
<p class="text-dark">Did you stay in {{room_details.room_name}}? Tell other guests about your experience!</p>
<form >
  <input type="hidden" id="user_id" name="user_id" value={{userId}} class="form-control">
  <label for="comment"> </label>
  <input type="text" id="comment-body" class="form-control" name="comment-body" placeholder="Place your comment Here">
  <button type="submit" class="btn btn-outline-danger btn-primary comment-btn">Submit</button>
  <!--end of if logged in -->
</form>
</div>
{{/if}}
</div>


